APP_URL=http://localhost:8080

# Database (MongoDB)
DB_CONNECTION=mongodb
DB_HOST=mongodb
DB_PORT=27017
DB_DATABASE=laravel_recipes_dev
DB_USERNAME=laravel_user
DB_PASSWORD=laravel_password

# MongoDB Admin (for initialization)
